@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
	font-family: "Poppins", sans-serif;
}

body {
    display: grid;
    place-content: center;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    background: rgba(23,62,118);
}

.flipbook {
    overflow: hidden;
}

.flipbook .hard {
    background: #c0392b !important;
    color: #fff;
    font-weight: bold;
    border: none; 
}

.flipbook .hard small{
	font-style: italic;
	font-weight: lighter;
	opacity: 0.7;
	font-size: 14px;
}

.flipbook .page {
    background: white;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
    gap: 10px;
    border: 1px solid rgba(0, 0, 0, 0.11);
}

.page img {
    width: 100%;
    height: 100%;
    object-fit: fill;
}

.flipbook .page small{
	font-size: 18px;
    margin-bottom: 10px;
}


#page-info {
    font-weight: bold;
}


.next-btn {
    position: fixed;
    bottom: 50%;
    transform: translateX(-50%);
    z-index: 21;
    
}

.prev-btn {
   position: fixed;
    bottom: 50%;
    transform: translateX(-50%);
    z-index: 21;  

}


.next-btn,
.prev-btn {
  background-color: rgba(118,183,41);
  border-radius: 50%;
  border: none;
  padding: 8px 16px;
  font-size: 21px;

}

.next-btn:hover,
.prev-btn:hover {
  background-color: rgba(52,181,157);
  cursor: pointer;
}

.next-btn:focus,
.prev-btn:focus {
  outline: none;
}

.neon-pulse {
  background: #000;
  border: 2px solid #0ff;
  box-shadow: 0 0 10px #5fb230;
  overflow: visible;
}
 
.neon-pulse {
  background: #000;
  border: 2px solid #0ff;
  box-shadow: 0 0 10px #5fb230;
  overflow: visible;
}
 
.neon-pulse::before,
.neon-pulse::after {
  content: "";
  position: absolute;
  inset: -4px;
  border: 2px solid #5fb230;
  border-radius: inherit;
  animation: pulseOut 2s ease-out infinite;
  opacity: 0;
}
.neon-pulse::after {
  animation-delay: 1s;
}
 
@keyframes pulseOut {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}



@media (max-width: 7068px) {

    .next-btn {
        right: 8%;
    }

    .prev-btn {
        left: 10%;
    }
}

@media (max-width: 1920px) {

    .next-btn {
        right: 4%;
    }

    .prev-btn {
        left: 7%;
    }
}


@media (max-width: 820px) {

    .next-btn {
        right: 2%;
    }

    .prev-btn {
        left: 7%;
    }
}

@media (max-width: 768px) {

    .next-btn {
        right: 5%;
    }

    .prev-btn {
        left: 10%;
    }
}

@media (max-width: 568px) {

    .next-btn {
        right: -2%;
    }

    .prev-btn {
        left: 8%;
    }
}




button.btn-slide {
    width:50px;
    height:50px;
    margin:10px;
    border-style:none;
    background-color: transparent;
    border-radius: 50%;
    cursor: pointer;
    position:relative;
}

button.btn-slide:hover{
    background-color: rgba(255, 255, 255, 0.2);
}

